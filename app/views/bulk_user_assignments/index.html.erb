<% html_title l(:redmine_bulk_user_assignments) -%>
<h2><%= l(:redmine_bulk_user_assignments) -%></h2>

<%= render :partial => "filter" %>

<% unless @group.new_record? %>
  <h3><%= l(:label_group) -%>: <%= @group.name %></h3>

  <%= form_tag({:action => 'assign'}, :id => 'permissions_form') do %>

    <div class="assignment-container">
      <%= render :partial => "users" %>
    </div>

    <div class="assignment-container">
      <%= render :partial => "projects" %>
    </div>

    <div class="assignment-container">
      <%= render :partial => "roles" %>
    </div>

    <p class="submit"><%= submit_tag l(:button_save) %></p>

  <% end %>

<% end %>

<% content_for :header_tags do %>
	<%= stylesheet_link_tag :bulk_user_assignments, :plugin => 'redmine_bulk_user_assignments' %>
	<%= javascript_include_tag 'bulk_user_assignments.js', :plugin => 'redmine_bulk_user_assignments' %>
<% end %>
